@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="text-success mb-4">Product Details</h2>

<div class="card shadow-sm border-success">
    <div class="card-header bg-success text-white fw-bold">
        @Model.Name
    </div>
    <div class="card-body row">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ImagePath)
                     ? "https://via.placeholder.com/300x300?text=No+Image"
                     : Url.Content("~/" + Model.ImagePath.Replace("\\", "/")))"
                 class="img-fluid rounded border"
                 alt="Product Image"
                 style="max-height: 300px;" />

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Stock Quantity</dt>
                <dd class="col-sm-8">@Model.StockQuantity</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>

                <dt class="col-sm-4">Unit</dt>
                <dd class="col-sm-8">@Model.Unit?.Name</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success me-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
