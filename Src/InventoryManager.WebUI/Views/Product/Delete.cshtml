@model Product

<h2 class="mb-4 text-danger fw-bold">Delete Product</h2>
<p class="mb-4 text-muted">Are you sure you want to delete this unit?</p>

<form method="post" class="border rounded p-4 shadow-sm bg-white">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-semibold"></label>
        <input asp-for="Name" class="form-control" readonly />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-semibold"></label>
        <input asp-for="Description" class="form-control" readonly />
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label fw-semibold"></label>
        <input asp-for="Price" class="form-control" readonly />
        <span asp-validation-for="Price" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label fw-semibold"></label>
        <input asp-for="StockQuantity" class="form-control" readonly />
        <span asp-validation-for="StockQuantity" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImagePath" class="form-label fw-semibold"></label>
        <img src="@(string.IsNullOrEmpty(Model.ImagePath)
                 ? "https://via.placeholder.com/300x300?text=No+Image"
                 : Url.Content("~/" + Model.ImagePath.Replace("\\", "/")))"
             class="img-fluid rounded border"
             alt="Product Image"
             style="max-height: 300px;" />

    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>
