@model ProductVM

<h2 class="mb-4 text-success fw-bold">Create Unit</h2>

<form method="post" enctype="multipart/form-data" class="border rounded p-4 shadow-sm bg-white">
    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label fw-semibold"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description" class="form-label fw-semibold"></label>
        <input asp-for="Product.Description" class="form-control" />
        <span asp-validation-for="Product.Description" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Product.Price" class="form-label fw-semibold"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageUri" class="form-label fw-semibold"></label>
        <input asp-for="ImageUri" class="form-control" />
        <span asp-validation-for="ImageUri" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Product.CategoryId" class="form-label fw-semibold"></label>
        <select asp-for="Product.CategoryId" asp-items="(IEnumerable<SelectListItem>)ViewBag.CategoryList" class="form-control">
            <option value="">--Select Category--</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.UnitId" class="form-label fw-semibold"></label>
        <select asp-for="Product.UnitId" asp-items="(IEnumerable<SelectListItem>)ViewBag.UnitList" class="form-control">
            <option value="">--Select Unit--</option>
        </select>
        <span asp-validation-for="Product.UnitId" class="text-danger small"></span>
    </div>



    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>
