<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManager.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManager.WebUI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            min-height: 100vh;
            color: #fff;
        }

        .navbar-green {
            background: linear-gradient(135deg, #0f2027, #203a43) !important;
            border-bottom: 2px solid rgba(0, 212, 170, 0.3);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

            .navbar-green .navbar-brand,
            .navbar-green .nav-link,
            .navbar-green .dropdown-toggle {
                color: #fff !important;
                transition: all 0.3s ease;
            }

            .navbar-green .navbar-brand {
                background: linear-gradient(45deg, #00f5ff, #00d4aa);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-weight: 700;
            }

            .navbar-green .nav-link:hover,
            .navbar-green .dropdown-toggle:hover {
                background: linear-gradient(45deg, #00d4aa, #00f5ff);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                transform: translateY(-2px);
            }

            .navbar-green .dropdown-menu {
                background: linear-gradient(135deg, #203a43, #2c5364);
                border: 1px solid rgba(0, 212, 170, 0.3);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            }

            .navbar-green .dropdown-item {
                color: #fff !important;
                transition: all 0.3s ease;
            }

                .navbar-green .dropdown-item:hover {
                    background: linear-gradient(45deg, rgba(0, 212, 170, 0.2), rgba(0, 245, 255, 0.2));
                    color: #00f5ff !important;
                    transform: translateX(5px);
                }

        .navbar-toggler {
            border-color: rgba(0, 212, 170, 0.5);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%2300f5ff' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .container-fluid {
            background: transparent;
        }

        main {
            min-height: calc(100vh - 200px);
        }

        .footer {
            background: linear-gradient(135deg, #0f2027, #203a43);
            color: #fff;
            padding: 1.5rem 0;
            border-top: 2px solid rgba(0, 212, 170, 0.3);
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
        }

            .footer a {
                color: #00f5ff;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .footer a:hover {
                    color: #00d4aa;
                    text-decoration: underline;
                    transform: translateY(-2px);
                }

        /* Enhanced scrollbar styling */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #203a43;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(45deg, #00d4aa, #00f5ff);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(45deg, #00f5ff, #00d4aa);
            }

        /* Ensure content visibility on dark background */
        .card, .table, .form-control, .btn-outline-secondary {
            background: rgba(255, 255, 255, 0.95);
            color: #333;
            border: 1px solid rgba(0, 212, 170, 0.3);
        }

        .card {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .table {
            background: rgba(255, 255, 255, 0.98);
        }

        .btn-primary {
            background: linear-gradient(45deg, #00d4aa, #00f5ff);
            border: none;
            box-shadow: 0 4px 15px rgba(0, 212, 170, 0.3);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0, 212, 170, 0.4);
            }

        .btn-success {
            background: linear-gradient(45deg, #00d4aa, #4ecdc4);
            border: none;
        }

        .btn-info {
            background: linear-gradient(45deg, #00f5ff, #48cae4);
            border: none;
        }

        .btn-warning {
            background: linear-gradient(45deg, #feca57, #ff9ff3);
            border: none;
        }

        .btn-danger {
            background: linear-gradient(45deg, #ff6b6b, #ee5a52);
            border: none;
        }

        /* Alert styling */
        .alert {
            border: 1px solid rgba(0, 212, 170, 0.3);
            background: rgba(255, 255, 255, 0.95);
        }

        .alert-success {
            border-color: #00d4aa;
            background: rgba(0, 212, 170, 0.1);
            color: #0f2027;
        }

        .alert-info {
            border-color: #00f5ff;
            background: rgba(0, 245, 255, 0.1);
            color: #0f2027;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-green border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">InventoryManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="inventoryDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Inventory
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="inventoryDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Unit" asp-action="Index">Units</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">Categories</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Purchase" asp-action="Index">Purchases</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container text-center">
            &copy; 2025 - InventoryManager.WebUI -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>